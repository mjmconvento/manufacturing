{% extends "CatalystTemplateBundle::base.html.twig" %}
{% import "CatalystTemplateBundle::form.html.twig" as form %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption">{% block form_header %}{% endblock %}</div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form method="post" class="form-horizontal">
                    <div class="form-body">
                        {{ form.group_text('Name', 'name', object.getName, 3, 4) }}
                        {{ form.group_textarea('Address', 'address', object.getAddress, 3, 3, 4) }}
                        {{ form.group_text('Contact Number', 'contact_num', object.getContactNumber, 3, 4) }}
                        {{ form.group_select('Type', 'type_id', wh_type_opts, object.getType, 3, 4) }}
                        <div class="form-group">
                            <label class="col-md-3 control-label">Characteristics</label>
                            <div class="col-md-5">
                                <div>
                                {{ form.checkbox('flag_threshold', 1, 'Track stock threshold?', object.canTrackThreshold, 'chars') }}
                                </div>
                                <div>
                                {{ form.checkbox('flag_shopfront', 1, 'Is shopfront?', object.isShopfront, 'chars') }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue">Submit</button>
                            <a href="{{ path(route_list) }}" class="btn default">Cancel</a>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>

{% if (object.getID) %}
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption">Warehouse Stock</div>
            </div>

            <div class="portlet-body form">
                <div class="col-md-12" style="padding-top: 10px">
                    <table class="table table-striped table-bordered table-hover" id="stock_grid">
                        <thead>
                            <tr>
                            {% for col in stock_cols %}
                                <th>{{ col.getLabel }}</th>
                            {% endfor %}
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <div class="row"></div>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}

{% block js %}
{% if (object.getID) %}
<script src="{{ asset('bundles/catalysttemplate/assets/global/plugins/data-tables/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('bundles/catalysttemplate/assets/global/plugins/data-tables/DT_bootstrap.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/catalysttemplate/assets/global/plugins/jquery-validation/js/jquery.validate.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/catalysttemplate/assets/global/plugins/jquery-validation/js/additional-methods.min.js') }}"></script>
<script src="{{ asset('bundles/catalysttemplate/assets/admin/pages/scripts/form-validation.js') }}"></script>

<script>
$(document).ready(function() {
    FormValidation.init(); // init form validation
    
    // set default error and success elements
    jQuery.validator.setDefaults({
        errorClass: 'help-block',
        errorElement: 'span',
        errorPlacement: function(error, element) {
            if(element.parent().parent().hasClass('form-group'))
            {
                error.appendTo(element.parent().last());
                element.parent().parent().addClass('has-error');
            }
            else
            {
                error.appendTo(element.parent().parent().last());
                element.parent().parent().parent().addClass('has-error');
            }
        },
        success: function(element) {
            if(element.parent().parent().hasClass('form-group'))
            {  
                element.parent().parent().removeClass('has-error');
                element.parent().parent().addClass('has-success');
            }
            else
            {  
                element.parent().parent().parent().removeClass('has-error');
                element.parent().parent().parent().addClass('has-success');
            }

            element.remove();
        }
    });

    // validate form elements
    $(".form-horizontal").validate({
        onfocusout: function(element) {
           this.element(element);
        },
        rules: {
            name: {
                required: true
            },
            address: {
                required: true
            },
        },  
        submitHandler: function(form) {
            form.submit();
        }
    });
    
    $('#stock_grid').dataTable({
        "bProcessing": true,
        "bServerSide": true,
        "sAjaxSource": "{{ path('cat_inv_wh_stock_grid', {'id': object.getID}) }}",
        "iDisplayLength": 10,
        "sPaginationType": "bootstrap",
        "oLanguage": {
            "sLengthMenu": "_MENU_ records",
            "oPaginate": {
                "sPrevious": "Prev",
                "sNext": "Next"
            }
        }
    });

    $('#stock_grid_wrapper .dataTables_filter input').addClass("form-control input-small input-inline"); // modify table search input
    $('#stock_grid_wrapper .dataTables_length select').addClass("form-control input-xsmall input-inline"); // modify table per page dropdown
    $('#stock_grid_wrapper .dataTables_length select').select2(); // initialize select2 dropdown
});
</script>
