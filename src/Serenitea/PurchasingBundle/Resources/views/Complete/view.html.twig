{% block js %}

<script>
    $(document).ready(function() {
        var max_fields = 10;
        var wrapper = $(".accordion-content");
        var add_button = $("#add-field");

        var x = 0;

        $(add_button).click(function(e){
            e.preventDefault();
            if( x < max_fields )
            {
                x++;
                $(wrapper).append('<tr><td>Quantity<input type="number"></td><td st>Expiration Date<input type="date"></td><tr>');                
            }
        });

        $(wrapper).on("click",".remove_field", function(){
            e.preventDefault();
            $(this).parent('td').remove();
            x--;
        });
    });
</script>

