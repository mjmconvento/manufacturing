<script>
function update_supplier_detail() {
    $.getJSON('/purchasing/ajax/supplier/' + $('#supplier_id').val(), function(data){
        $('#contact_person').val(data.contact_person);
        $('#address').val(data.address);
        $('#contact_number').val(data.contact_number);
        $('#fax_number').val(data.fax_number);
        $('#tin_number').val(data.tin_number);
    });
}

function escape_attr(s) {
    return String(s).replace(/&(?!\w+;)/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;');
}

function escape_html(s) {
    return String(s).replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;');
}

function update_totals() {
    var total_qty = 0.00;
    var total_price = 0.00;
    var total_total = 0.00;

    $('#en_table tr').each(function() {
        var qty = $(this).find('.en_qty').val();
        var price = $(this).find('.en_price').val();
        var total = qty * price;

        total_qty += parseFloat(qty);
        total_price += parseFloat(price);
        total_total += parseFloat(total);
        
        $(this).find('.en_total').html(total.toFixed(2));
    });

    $('#total_qty').html(total_qty.toFixed(2));
    $('#total_price').html(total_price.toFixed(2));
    $('#total_total').html(total_total.toFixed(2));
}

function update_form_price()
{
    $.getJSON('/inventory/ajax/product/' + $('#en_product_id').val(), function(data) {
        $('#en_price').val(data.price_purchase);
    });
}

// append entries to entry table
function appendEntry(prod_id, prod_name, qty, price)
{
    var row = '<tr>';
    row += '<td></td>';
    row += '<td><input type="hidden" name="en_prod_id[]" value="' + escape_attr(prod_id) + '">' + escape_html(prod_name) + '</td>';
    row += '<td><input class="form-control en_qty" type="text" name="en_qty[]" value="' + qty + '"></td>';
    row += '<td><input class="form-control en_price" type="text" name="en_price[]" value="' + price + '"></td>';
    row += '<td class="en_total"></td>';
    row += '<td><a href="#btn_en_add" class="btn_en_del btn_dim_del"><i class="glyphicon glyphicon-remove-circle font-red"></i></a></td>';
    row += '</tr>';

    // row += '<td><a href="#" class="btn default btn-xs red-sunglo"><i class="btn_en_del fa fa-minus-circle"></i></a></td>';
    // row += '</tr>';

    $('#en_table').append(row);
}

$(document).ready(function() {
    ComponentsPickers.init();
    FormValidation.init(); // init form validation
    update_supplier_detail();
    update_form_price();
    update_totals();

    // set default error and success elements
    jQuery.validator.setDefaults({
        errorClass: 'help-block',
        errorElement: 'span',
        errorPlacement: function(error, element) {
            if(element.parent().parent().hasClass('form-group'))
            {
                error.appendTo(element.parent().last());
                element.parent().parent().addClass('has-error');
            }
            else
            {
                error.appendTo(element.parent().parent().last());
                element.parent().parent().parent().addClass('has-error');
            }
        },
        success: function(element) {
            if(element.parent().parent().hasClass('form-group'))
            {  
                element.parent().parent().removeClass('has-error');
                element.parent().parent().addClass('has-success');
            }
            else
            {  
                element.parent().parent().parent().removeClass('has-error');
                element.parent().parent().parent().addClass('has-success');
            }

            element.remove();
        }
    });
    
    //load supplier detail
    $('#supplier_id').change(function(){
        update_supplier_detail();
    });

    // get prod contents
    var prod;
    {% if prod is defined %}   
        prod = {{ prod | json_encode | raw }};
    {% endif %}

    // append product to entry table if prod is not undefined
    if(prod != undefined)
    {
        appendEntry(prod.id, prod.code + ' ' + prod.name, 0, prod.price);

        update_totals();
    }

    // validate form elements
    $(".form-horizontal").validate({
        onfocusout: function(element) {
           this.element(element);
        },
        rules: {
            code: {
                required: true
            }
        },  
        submitHandler: function(form) {
            form.submit();
        }
    });

    // button
    $('#btn_en_add').click(function() {
        $('#en_qty').val('0.00');
    });

    // auto price load
    $('#en_product_id').change(function() {
        update_form_price();
    });

    // form - update table
    $('#btn_en_submit').click(function() {
        var prod_id = $('#en_product_id').val();
        var prod_name = $('#en_product_id option:selected').text();

        var qty = $('#en_qty').val();
        var price = $('#en_price').val();
        var total = qty * price;

        // changed to appendentry func for reusability
        appendEntry(prod_id, prod_name, qty, price);

        update_totals();

        $('#en_form').modal('hide');
    });

    // delete
    $('#en_table').on('click', '.btn_en_del', function() {
        $(this).closest('tr').remove();
        update_totals();
    });

    // change values
    $('#en_table').on('change', '.en_qty, .en_price', function() {
        update_totals();
    });
});
</script>
