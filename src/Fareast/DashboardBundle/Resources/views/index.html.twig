{% extends "CatalystTemplateBundle::base.html.twig" %}
{% import "CatalystTemplateBundle::form.html.twig" as form_tools %}
{% import "CatalystTemplateBundle::dashboard.html.twig" as dboard %}

{% block content %}
<div class="row">
      <div class="col-md-12 col-sm-12">
            <div id="manufacturing">
            </div>
      </div>
</div>
<div class="row">

</div>
{% endblock %}


{% block js %}
<script type="text/javascript">

$(document).ready(function(){  
    $(function () {
        $('#manufacturing').highcharts({
            title: {
                text: 'Weekly manufacturing Efficiency',
                x: -20 //center
            },
            xAxis: {
                title: {
                    text: 'Weeks'
                },
                categories: ['Week 1', 'Week 2', 'Week 3', 'Week 4', 'Week 5', 'Week 6','Week 7', 'Week 8', 'Week 9', 'Week 10', 'Week 11', 'Week 12']
            },
            yAxis: {
                title: {
                    text: 'Percentage'
                },
                plotLines: [{
                    value: 0,
                    width: 1,
                    color: '#808080'
                }]
            },
            tooltip: {
                valueSuffix: '%'
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                borderWidth: 0
            },
            series: [{
                name: 'Fermentation Efficiency',
                data: [7.0, 6.9, 9.5, 14.5, 18.2, 21.5, 25.2, 26.5, 23.3, 18.3, 13.9, 9.6]
            }, {
                name: 'Distillation Efficiency',
                data: [-0.2, 0.8, 5.7, 11.3, 17.0, 22.0, 24.8, 24.1, 20.1, 14.1, 8.6, 2.5]
            }, {
                name: 'Overall Efficiency',
                data: [-0.9, 0.6, 3.5, 8.4, 13.5, 17.0, 18.6, 17.9, 14.3, 9.0, 3.9, 1.0]
            }],
            credits: {
                enabled: false
            }
        });
    });
});
</script>
<script src="{{ asset('bundles/catalysttemplate/assets/global/plugins/highcharts/highcharts.js') }}"></script>
<script src="{{ asset('bundles/catalysttemplate/assets/global/plugins/highcharts/modules/exporting.js') }}"></script>
{% endblock %}