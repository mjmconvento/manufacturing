<page>
	<div style="text-align:center; font-family:arial; padding-bottom: 7px; font-size: 15px; font-weight:bold;">FAREAST ALCOHOL CORPORATION</div>
	<div style="text-align:center; font-family:arial; padding-bottom: 7px; font-size: 15px;">ISSUANCE SLIP</div>
	<br>
	
	<table>
		{% for d in data %}
		<tr>
			<td style="width:150px">No. {{ d.code }}</td>
			<td>Date: {{ d.created|date('Y-m-d') }}</td>
		</tr>
	</table>
	<br>
	<br>
	<table>
		<tr>
			<th style="width:60px">UNIT</th>
			<th style="width:100px">DESCRIPTION</th>
			<th style="width:80px">REMARKS</th>
			<th>QUANTITY</th>
		</tr>
		<tr>
			<td></td>
		</tr>
		<tbody>		
			<tr>
				<td style="width:60px">{{ d.name }}</td>
				<td style="width:100px">{{d.description}}</td>
				<td style="width:80px">{{d.remark}}</td>
				<td>{{d.quantity}}</td>
			</tr>
		
		</tbody>
	</table>
	<page_footer>
		<table>
			<tr>
				<td style="width:200px">Received By:</td>			
				<td>Issued By: {{ d.create }}</td>
			{% endfor %}
			</tr>
		</table>
	</page_footer>
</page>