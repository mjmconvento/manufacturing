{% extends "CatalystTemplateBundle::base.html.twig" %}
{% import "CatalystTemplateBundle::form.html.twig" as form_tools %}

{% block content %}
<div class="row">

</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption">Transfer Stock</div>
            </div>
            <div class="portlet-body form">
                <form method="post" class="form-horizontal" novalidate="novalidate">
                    <div class="form-body">
                        <h4 class="form-section">Information</h4>
                        <div id="cgroup-sku" class="form-group">
                            <label class="col-md-3 control-label">Source Warehouse</label>
                            <div class="col-md-4">
                            <select name="foo" class="select2me form-control">
                                <option value="1">[Select Warehouse]</option>
                                <option value="1">Apalit Warehouse 1</option>
                                <option value="1">Apalit Warehouse 2</option>
                                <option value="1">Apalit Warehouse 3</option>
                            </select>
                            </div>
                        </div>

                        <div id="cgroup-sku" class="form-group">
                            <label class="col-md-3 control-label">Destination Warehouse</label>
                            <div class="col-md-4">
                            <select name="foo" class="select2me form-control">
                                <option value="1">[Select Warehouse]</option>
                                <option value="1">Apalit Warehouse 1</option>
                                <option value="1">Apalit Warehouse 2</option>
                                <option value="1">Apalit Warehouse 3</option>
                            </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Description</label>
                            <div class="col-md-4 row-md-5">
                                <textarea class="form-control" rows="5" style="resize: none;"></textarea>
                            </div>
                        </div>

                        <h4 class="form-section">Item Entries</h4>
                        <div class="table-toolbar">
                            <a id="btn_from_add" href="#entry_form" class="btn green" data-toggle="modal">Add Item</a>
                        </div>

                        <div class="table-scrollable">
                            <table class="table table-striped table-bordered table-hover dataTable" id="list_table" aria-describedby="list_table_info">
                                <thead>
                                    <tr role="row">
                                        <th role="columnheader" tabindex="0" aria-controls="list_table" rowspan="1" colspan="1">Item Code</th>
                                        <th role="columnheader" tabindex="0" aria-controls="list_table" rowspan="1" colspan="1">Item Name</th>
                                        <th role="columnheader" tabindex="0" aria-controls="list_table" rowspan="1" colspan="1">Quantity</th>
                                        <th role="columnheader" tabindex="0" aria-controls="list_table" rowspan="1" colspan="1">Unit of Measurement</th>
                                        <th role="columnheader" tabindex="0" aria-controls="list_table" rowspan="1" colspan="1"></th>
                                    </tr>
                                </thead>
                                <tbody role="alert" aria-live="polite" aria-relevant="all">
                                    <tr class="odd">
                                        <td>00-001</td>
                                        <td>Hammer</td>
                                        <td>3</td>
                                        <td>pcs</td>
                                        <td align="center">
                                            <a href="#" class="btn default btn-xs red-intense">Delete</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </form>
                <div class="form-actions fluid">
                    <div class="col-md-12">
                        <button type="submit" class="btn blue">Submit</button>
                        <a href="{{ path('feac_inv_borrowed') }}" class="btn default">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="entry_form" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 id="form_title" class="modal-title">Add Item Entry</h4>
                </div>
                <div class="modal-body form-horizontal">
                    <div id="cgroup-sku" class="form-group">
                        <label class="col-md-4 control-label">Item Category</label>
                        <div class="col-md-6">
                        <select name="foo" class="select2me form-control">
                            <option value="1">[Select Category]</option>
                            <option value="1">Category 1</option>
                            <option value="1">Category 2</option>
                            <option value="1">Category 3</option>
                        </select>
                        </div>
                    </div>

                    <div id="cgroup-sku" class="form-group">
                        <label class="col-md-4 control-label">Item Name</label>
                        <div class="col-md-6">
                        <select name="foo" class="select2me form-control">
                            <option value="1">[Select Name]</option>
                            <option value="1">Hammer</option>
                            <option value="1">Automatic Screwdriver</option>
                            <option value="1">Paint Brush</option>
                        </select>
                        </div>
                    </div>

                    <div id="cgroup-sku" class="form-group">
                        <label class="col-md-4 control-label">Unit of Measurement</label>
                        <div class="col-md-6">
                            <input type="text" id="quantity" name="quantity" class="form-control price" placeholder="Unit of Measurement" value="">
                        </div>
                    </div>

                    <div id="cgroup-sku" class="form-group">
                        <label class="col-md-4 control-label">Quantity</label>
                        <div class="col-md-6">
                            <input type="number" id="quantity" name="quantity" class="form-control price" placeholder="Quantity" value="0">
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn blue">Submit</button>
                    <button type="button" class="btn default" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}

