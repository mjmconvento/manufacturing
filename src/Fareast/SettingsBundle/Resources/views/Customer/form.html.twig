{% extends "CatalystTemplateBundle::base.html.twig" %}
{% import "CatalystTemplateBundle::form.html.twig" as form_tools %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption">{% block form_header %}{% endblock %}</div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form method="post" class="form-horizontal">
                    <div class="form-body">
                        {# include "CatalystContactBundle::form.contact.html.twig" #}
                        {{ form_tools.group_text('First Name', 'f_name', object.getFirstName|default(''), 3, 4) }}
                        {{ form_tools.group_text('Middle Name', 'm_name', object.getMiddleName|default(''), 3, 4) }}
                        {{ form_tools.group_text('Last Name', 'l_name', object.getLastName|default(''), 3, 4) }}
                        <h4 class="form-section">Contact Information</h4>
                        {{ form_tools.group_textarea('Address', 'address', object.getAddress|default(''),2, 3, 4) }}
                        {{ form_tools.group_number('Contact Number', 'contact_number', object.getContactNumber|default(''), 3, 4) }}
                        {{ form_tools.group_email('Email', 'email', object.getEmail|default(''), 3, 4) }}
                        {{ form_tools.group_text('Contact Person', 'contact_person', object.getContactPerson|default(''), 3, 4) }}
                    </div>


                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue">Submit</button>
                            <a href="{{ path(route_list) }}" class="btn default">Cancel</a>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>

{# include "CatalystContactBundle::modal.contact.html.twig" #}
{% endblock %}

{% block js %}
<script src="{{ asset('bundles/catalystcontact/js/catalyst.has_addresses.js') }}"></script>
<script src="{{ asset('bundles/catalystcontact/js/catalyst.has_phones.js') }}"></script>

{% endblock %}
